div.header
    ul.nav.nav-pills.pull-right
        li.active
            a(ng-click='log()')
                i.fa.fa-print
                span=button.print
    h3.text-muted=sitename
        |&nbsp;
        a(ng-if='file', href='{{file}}', target='_blank')
            i.fa.fa-file-pdf-o
div.row.top-row
    .col-md-8.col-xs-10
        .text-block.name-block(text='', type='name')
        .text-block.position-block(text='', type='position')
    .col-md-4.col-xs-2.gray-border.border-left
        .image-block.avatar-block(image='', type='avatar')
div.row.info-row
    .col-md-6.info-block(block='', type='info')
    .col-md-6.rating-block(block='', type='rating')

div.footer
    p=copyright